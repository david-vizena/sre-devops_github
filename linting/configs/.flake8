[flake8]
# Maximum line length
max-line-length = 120

# Exclude directories
exclude =
    .git,
    __pycache__,
    node_modules,
    venv,
    env,
    .venv,
    build,
    dist,
    *.egg-info

# Ignore specific errors
# E501 = line too long (handled by black)
# E203 = whitespace before ':' (black handles this differently)
# W503 = line break before binary operator (black style)
ignore = E501, E203, W503

# Maximum complexity
max-complexity = 10

# Per-file ignores
per-file-ignores =
    __init__.py:F401

# Import checking
import-order-style = google

